<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp" >

    <!-- Song picture -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/songPicture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />

    <!-- Song name -->
    <TextView
        android:id="@+id/tv_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/songPicture"
        android:layout_toRightOf="@+id/songPicture"
        android:textSize="@dimen/song"
        android:textStyle="bold" />

    <!-- Artist name -->
    <TextView
        android:id="@+id/tv_songArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_song"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/songPicture"
        android:textSize="@dimen/songArtist" />

</RelativeLayout>